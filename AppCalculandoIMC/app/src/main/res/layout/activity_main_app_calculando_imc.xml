<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".MainAppCalculandoIMC">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAppCalculandoIMC"
    android:background="@color/amarelinho"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_byAndrezaCampbell_id"
        android:text="by Andreza Campbell"
        android:textSize="11sp"
        android:textAlignment="textEnd"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/escritos_laranja"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:text="Digite para saber se você está no seu peso ideal:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@color/escritos_verde_medio"
        android:text="Seu peso atual em kilos"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/peso_digitado_id"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textColor="@color/escritos_laranja"
        android:inputType="numberDecimal"
        android:hint="Ex. 64"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/escritos_verde_medio"
        android:text="Sua altura em metros"/>

    <EditText
        android:id="@+id/altura_digitada_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textColor="@color/escritos_laranja"
        android:hint="Ex.1.60"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="19sp"
        android:textColor="@color/escritos_verde_medio"
        android:text="Se você é do sexo masculino ou feminino"
        android:gravity="center"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sexo_digitado_id"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:inputType="textShortMessage"
        android:textColor="@color/escritos_laranja"
        android:hint="Ex. f"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/verde_escuro"
        android:textColor="@color/verde_claro"
        android:onClick="botaoCalcularClicado"
        android:id="@+id/botaoCalcularClicado_id"
        android:layout_margin="2.5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:background="@color/verde_escuro"
        android:textColor="@color/verde_claro"
        android:layout_margin="2.5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/botaoLimparClicado_id"
        android:onClick="botaoLimparClicado"/>

    </LinearLayout>

